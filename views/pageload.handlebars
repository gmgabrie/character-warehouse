<section class="container">
  <h3 class="user-name">{{user.name}}</h3>
  {{#if loggedIn}}
  <section class="flex-row justify-center">
    <button id="">Create New Character</button>
    <div id="creation">{{character-creation}}</div>
    {{#each user.characters as |character|}}
    {{> character-details}}
    {{/each}}
  </section>
</section>
{{else}}
<a href="/login">Please login to create your own characters.</a>
{{/if}}