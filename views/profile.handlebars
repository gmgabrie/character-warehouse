<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-4">
    <h3>Create a New character:</h3>

    <form class="form new-character-form">
      <div class="form-group">
        <label for="character-name">Name:</label>
        <input
          class="form-input"
          type="text"
          id="character-name"
          name="character-name"
        />
      </div>
      <div class="form-group">
        <label for="character-age">Age:</label>
        <input
          class="form-input"
          type="number"
          id="character-age"
          name="character-age"
        />
      </div>
      <div class="form-group">
        <label for="character-story">Race:</label>
        <textarea
          class="form-input"
          type="text"
          id="character-race"
          name="character-race"
        ></textarea>
      </div>
      <div class="form-group">
        <label for="character-story">Gender:</label>
        <textarea
          class="form-input"
          type="text"
          id="character-gender"
          name="character-gender"
        ></textarea>
      </div>
      <div class="form-group">
        <label for="character-story">Height:</label>
        <textarea
          class="form-input"
          type="text"
          id="character-height"
          name="character-height"
        ></textarea>
      </div>
      <div class="form-group">
        <label for="character-story">Weight:</label>
        <textarea
          class="form-input"
          type="text"
          id="character-weight"
          name="character-weight"
        ></textarea>
      </div>
      <div class="form-group">
        <label for="character-story">Story:</label>
        <textarea
          class="form-input"
          id="character-story"
          name="character-story"
        ></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if characters.length}}
    <div class="col-md-4 character-list">
      <h3>Your characters:</h3>

      {{#each characters as |character|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4><a
                {{!-- href="/characters/{{character.id}}" --}}
              >{{character.Name}}</a></h4>
          </div>
          <div class="col-md-4">
            <button
              class="btn btn-sm btn-danger"
              data-id="{{character.id}}"
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>